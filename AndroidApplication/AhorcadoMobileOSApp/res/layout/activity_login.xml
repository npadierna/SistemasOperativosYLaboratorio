<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_app"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.login.LoginActivity" >

    <!-- Image Logo Row -->

    <TableRow
        android:layout_width="fill_parent"
        android:layout_marginBottom="@dimen/image_logo_row_margin_bottom"
        android:gravity="center" >

        <ImageView
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo_text_view_description"
            android:src="@drawable/ic_launcher" >
        </ImageView>

        <ImageView
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo_text_view_description"
            android:src="@drawable/ic_launcher" >
        </ImageView>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_name_text_view_margin_top"
            android:layout_span="2"
            android:gravity="center_horizontal"
            android:text="@string/user_name_text_view"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/user_name_text_color"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:gravity="center_horizontal" >

        <EditText
            android:id="@+id/user_name_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/user_name_edit_text_margin_top"
            android:layout_span="2"
            android:ems="@integer/user_name_edit_text_ems"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/user_name_hint_edit_text"
            android:singleLine="true" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:gravity="center_horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/password_text_view_margin_top"
            android:layout_span="2"
            android:gravity="center_horizontal"
            android:text="@string/password_text_view"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/password_text_color"
            android:textStyle="bold" >
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:nextFocusUp="@id/user_name_edit_text" >

        <EditText
            android:id="@+id/password_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/password_edit_text_margin_top"
            android:layout_span="2"
            android:ems="@integer/password_edit_text_ems"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/password_hint_edit_text"
            android:inputType="textPassword"
            android:nextFocusDown="@+id/login_button" >
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/button_section_table_row"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onLogin"
            android:text="@string/login_button" >
        </Button>

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:onClick="onCreateAccount"
            android:text="@string/create_account_button" >
        </Button>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/image_logo_row__margin_top"
        android:gravity="center" >

        <ImageView
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo_text_view_description"
            android:src="@drawable/ic_launcher" >
        </ImageView>

        <ImageView
            android:layout_height="wrap_content"
            android:contentDescription="@string/logo_text_view_description"
            android:src="@drawable/ic_launcher" >
        </ImageView>
    </TableRow>

</TableLayout>